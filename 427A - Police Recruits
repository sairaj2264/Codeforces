#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	
	long long n;
	cin >> n;
	
	long long  a[n];
	long long minn = INT_MAX;
	long long sum = 0;
	
	for(long long i=0;i<n;i++){
	    cin >> a[i];
	    sum += a[i];
	    minn = min(minn , sum);
	}
	if(minn>=0){
	    cout<<0<<endl;
	}else{
	cout<<abs(minn)<<endl;
}
	
	

}
